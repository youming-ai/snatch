# ===========================================
# Snatch - Production Environment Configuration
# ===========================================
# Copy this file to .env and modify for your production environment

# ===========================================
# Frontend (Astro)
# ===========================================

# Rust API service URL (use internal Docker network)
RUST_API_URL=http://api:3001

# Server binding
HOST=0.0.0.0
PORT=4321

# Node environment
NODE_ENV=production

# ===========================================
# Backend (snatch-rs)
# ===========================================

# CORS allowed origins (comma-separated)
# IMPORTANT: Set this to your domain in production!
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Log level: error, warn, info, debug, trace
RUST_LOG=info

# ===========================================
# Rate Limiting
# ===========================================

# Time window in milliseconds (default: 60000 = 1 minute)
RATE_LIMIT_WINDOW=60000

# Maximum requests per time window
RATE_LIMIT_MAX=10

# ===========================================
# Optional: Monitoring
# ===========================================

# Enable health check logging (true/false)
# HEALTH_CHECK_LOG=false
