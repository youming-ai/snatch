# ===========================================
# Snatch - Environment Configuration
# ===========================================
# Copy this file to .env and modify as needed

# ===========================================
# Frontend (Astro)
# ===========================================

# Rust API service URL
RUST_API_URL=http://localhost:3001

# Server binding
HOST=0.0.0.0
PORT=4321

# ===========================================
# Backend (snatch-rs)
# ===========================================

# CORS allowed origins (comma-separated)
# Leave empty for development, set for production
# ALLOWED_ORIGINS=https://snatch.example.com

# Log level
RUST_LOG=info

# ===========================================
# Rate Limiting
# ===========================================

# Window in milliseconds (default: 60000 = 1 minute)
RATE_LIMIT_WINDOW=60000

# Max requests per window
RATE_LIMIT_MAX=10
