# Snatch Backend - Environment Configuration
# Copy this file to .env and modify as needed

# ===========================================
# Rust API Configuration
# ===========================================

# CORS allowed origins (comma-separated)
# Leave empty for development, set for production
# Example: https://snatch.example.com,https://www.snatch.example.com
ALLOWED_ORIGINS=

# Server port (internal)
PORT=3001

# ===========================================
# Logging
# ===========================================

# Log level: error, warn, info, debug
RUST_LOG=info

# ===========================================
# Rate Limiting
# ===========================================

# Window in milliseconds (default: 60000 = 1 minute)
RATE_LIMIT_WINDOW=60000

# Max requests per window
RATE_LIMIT_MAX=10
